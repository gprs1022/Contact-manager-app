<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginscreen"
    android:orientation="vertical"
    tools:context=".signinActivity">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:startIconDrawable="@drawable/baseline_perm_identity_24"
        app:helperText="Required"
        android:layout_marginTop="400dp"
        app:boxCornerRadiusBottomStart="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:boxCornerRadiusTopEnd="40dp"
        app:boxBackgroundColor="@color/cardview_shadow_end_color"
        app:helperTextTextColor="#FF0000">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:id="@+id/UserName"
            android:hint="Enter your User Name " />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:layout_width="200dp"

        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/SignInbtn"
        android:text="SIGN IN"
        />
    <TextView
        android:layout_width="440dp"
        android:layout_height="wrap_content"

        android:textAlignment="center"
        android:textStyle="bold" android:layout_marginLeft="-30dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"

        android:text="SignIn To Continue"
        android:textSize="35dp"/>

</LinearLayout>